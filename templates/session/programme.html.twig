{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}

    <h1>Programme de la session</h1>

    <table>
        <thead>
            <tr>
                <th>Module</th>
                <th>Nombre de jours</th>
            </tr>
        </thead>
        <tbody>
            {% for programme in session.programmes %}
                <tr>
                    <td colspan="2">{{ programme.moduleForma.categorie }}</td>
                </tr>
                <tr>
                    <td>{{ programme.moduleForma }}</td>
                    <td>{{ programme.nbJours }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}